/* Scroll Progress */
.progress-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 5px;
  background: var(--primary);
  transform-origin: 0%;
  z-index: 2000;
}

.progress-character {
  position: fixed;
  top: -5px; /* Adjust to sit on top of the bar */
  z-index: 2001;
  font-size: 2rem;
  pointer-events: none;
  transition: left 0.1s linear;
}
